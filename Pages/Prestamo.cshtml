@page
@model ProjectoRazor.Pages.PrestamoModel
@{
}   

<div class = "container">
    <form method="post">
        <div class="form-group">
            <label>Monto</label>
            <input type="number" class="form-control" asp-for="prestamoObj.Monto" placeholder="0.00">
        </div>
        <div class="form-group">
            <label>Cantidad de Cuotas</label>
            <input type="number" class="form-control" asp-for="prestamoObj.Cuotas"  placeholder="0">
        </div>
        <div class="form-group">
            <label >% Interes</label>
            <input type="number" class="form-control" asp-for="prestamoObj.Interes" placeholder="0">
        </div>

        <div class="form-group">
            <label for="monto">Mensualidad</label>
            <input type="number" class="form-control" asp-for="prestamoObj.Mensualidad" placeholder="0" disabled>
        </div>

        <button type = "submit" class = "btn btn-success">Calcular</button>
    </form>
</div>